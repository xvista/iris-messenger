extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Welcome #{user.firstName}. Check your details below:
						div.signup-wall
							ul.user-details
								li Username ---> #{user.username}
								li name    ---> #{user.name}
						
						a(href='/signout', class='text-center new-account') Sign Out
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title
					a(href='/chat', class='text-center new-account') chat
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title 
					form(class='form-inline', action='/create/group', method='POST')
						input(type='text', name='new_group', class='form-control', placeholder='Create New Group...')
						button(class='btn btn-primary', type='submit') Create
		ul
			each link in group_name
				li 
					a(href='/join/group/'+link.name) #{link.name}
			