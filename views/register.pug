doctype html
html
	head
		meta(charset="utf-8")
		title Register - Iris Messenger
		link(rel="stylesheet", href="css/bootstrap.min.css")
		link(rel="stylesheet", href="css/login.css")
	body
		div.container
			form.form-signin(action="/signup", method="post")
				a(href="/")
					img(src="img/iris-logo.png")
				h2.form-signin-heading Register
				input.form-control.first(type="text", name="username", placeholder="Username", autofocus, required)
				input.form-control.middle(type="password", name="password", placeholder="Password", required)
				input.form-control.last(type="text", name="name", placeholder="Name in conversation", required)
				button.btn.btn-lg.btn-primary.btn-block Register
				if message != ''
					div.alert.alert-danger #{message}
					
